
@{
    ViewBag.Title = "xOrdered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enter Name</h2>

@using (Html.BeginForm("xOrderedResult", "Home", FormMethod.Post))
{
    @Html.Label("First name:")
    @Html.TextBox("Fname")
    <br />
    @Html.Label("Middle name:")
    @Html.TextBox("Mname")
    <br />
    @Html.Label("Last name:")
    @Html.TextBox("Lname")
    <br />
    <br />
    <h2>Choose Order</h2>
    <div class="">
        @Html.RadioButton("1", "First MI Last")
        @Html.RadioButton("1", "First Last")
        @Html.RadioButton("1", "MI Last")
        @Html.RadioButton("1", "Last")
    </div>
<input type="submit" />
}
